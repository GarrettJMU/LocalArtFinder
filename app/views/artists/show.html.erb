<p id="notice"><%= notice %></p>
<div class="container">
    <div class="item1">
      <p>
        <strong>Artist Name:</strong>
        <%= @artist.artist_name %>
      </p>

      <p>
        <strong>First name:</strong>
        <%= @artist.first_name %>
      </p>

      <p>
        <strong>Last name:</strong>
        <%= @artist.last_name %>
      </p>

      <p>
        <strong>Email:</strong>
        <%= @artist.email %>
      </p>

      <p>
        <strong>Street:</strong>
        <%= @artist.street %>
      </p>

      <p>
        <strong>City:</strong>
        <%= @artist.city %>
      </p>

      <p>
        <strong>State:</strong>
        <%= @artist.state %>
      </p>

      <p>
        <strong>Zipcode:</strong>
        <%= @artist.zipcode %>
      </p>

      <p>
        <strong>Website:</strong>
        <%= @artist.website %>
      </p>

      <p>
        <strong>Sales:</strong>
        <%= @artist.sales %>
      </p>

      <p>
        <strong>Phone:</strong>
        <%= @artist.phone %>
      </p>

      <p>
        <strong>Price:</strong>
        <%= @artist.price %>
      </p>
    <!-- End col Div -->
    </div>
    <div class="item2">
      <h3>The Art</h3>
      <table>
        <thead>
          <tr>
            <th>Image</th>
            <th>Genre</th>
            <th>Description</th>
            <th>Price</th>
            <th>Length</th>
            <th>Width</th>
            <th>Medium</th>
            <th>Artist</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @arts.each do |art| %>
            <tr>
              <td><%= image_tag art.image.url(:small) %></td>
              <td><%= art.genre %></td>
              <td><%= art.description %></td>
              <td><%= art.price %></td>
              <td><%= art.length %></td>
              <td><%= art.width %></td>
              <td><%= art.medium %></td>
              <td><%= art.artist.artist_name %></td>
              <td><%= link_to 'Show', art %></td>
              <td><%= link_to 'Edit', edit_art_path(art) %></td>
              <td><%= link_to 'Destroy', art, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
<br />
<br />
      <h3>The Events</h3>
      <table>
        <thead>
          <tr>
            <th>Date</th>
            <th>Start</th>
            <th>End</th>
            <th>Gallery</th>
            <th>Artist</th>
            <th>Art</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @events.each do |event| %>
          <tr>
            <td><%= event.date.strftime("%m-%d-%Y") %></td>
            <td><%= event.start.strftime("%H:%M") %></td>
            <td><%= event.end.strftime("%H:%M") %></td>
            <td><%= event.gallery.name %></td>
            <td><%= event.artist.artist_name %></td>
            <td><%= event.art.description %></td>
            <td><%= link_to 'Show', event %></td>
            <td><%= link_to 'Edit', edit_event_path(event) %></td>
            <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
  </div>


<!-- End container Div -->
</div>

