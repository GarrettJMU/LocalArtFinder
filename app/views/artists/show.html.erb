<div class="artists-page container">
  <p id="notice"><%= notice %></p>
  <div class="col-xs-12">
    <ul class="nav nav-tabs" role="tablist">
      <li class="nav-item artist-tabs">
        <a href="#item1" class="nav-link active" role="tab" data-toggle="tab">Artist Profile</a>
      </li>
      <li class="nav-item artist-tabs">
        <a href="#item2" class="nav-link" role="tab" data-toggle="tab">Art</a>
      </li>
      <li class="nav-item artist-tabs">
        <a href="#item3" class="nav-link" role="tab" data-toggle="tab">Events</a>
      </li>
    </ul>
  </div>
  <div class="tab-content container">
    <div role="tabpanel" class="tab-pane active" id="item1">
      <h3>Personal Info</h3>
      <br />
      <p>
        <strong>Artist Name:</strong>
        <%= @artist.artist_name %>
      </p>

      <p>
        <strong>First name:</strong>
        <%= @artist.first_name %>
      </p>

      <p>
        <strong>Last name:</strong>
        <%= @artist.last_name %>
      </p>

      <p>
        <strong>Email:</strong>
        <%= @artist.email %>
      </p>

      <p>
        <strong>Street:</strong>
        <%= @artist.street %>
      </p>

      <p>
        <strong>City:</strong>
        <%= @artist.city %>
      </p>

      <p>
        <strong>State:</strong>
        <%= @artist.state %>
      </p>

      <p>
        <strong>Zipcode:</strong>
        <%= @artist.zipcode %>
      </p>

      <p>
        <strong>Website:</strong>
        <%= @artist.website %>
      </p>

      <p>
        <strong>Sales:</strong>
        <%= @artist.sales %>
      </p>

      <p>
        <strong>Phone:</strong>
        <%= @artist.phone %>
      </p>

      <p>
        <strong>Price:</strong>
        <%= @artist.price %>
      </p>
      <br />
      <br />
    <!-- End col Div -->
      <% if can? :update, @artist %>
      <%= link_to 'Edit Profile', edit_artist_path(@artist), class: "search-toggle" %>
      <% end %>

    </div>
    <div role="tabpanel" class="tab-pane" id="item2">
      <h3>The Art</h3>
      <br />
      <div class="container artist-table">
        <table>
          <thead>
            <tr>
              <th>Image</th>
              <th>Genre</th>
              <th>Title</th>
              <th>Price</th>
              <th>Length</th>
              <th>Width</th>
              <th>Medium</th>
              <th>Artist</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @arts.each do |art| %>
              <tr data-link="<%= art_path(art) %>">
                <td><%= image_tag art.image.url(:small) %></td>
                <td><%= art.genre %></td>
                <td><%= art.title %></td>
                <td><%= art.price %></td>
                <td><%= art.length %></td>
                <td><%= art.width %></td>
                <td><%= art.medium %></td>
                <td><%= art.artist.artist_name %></td>
                <td><%= link_to 'Edit', edit_art_path(art) %></td>
                <td><%= link_to 'Destroy', art, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <br />
      <br />
      <%= link_to 'Upload New Art', new_art_path, class:"search-toggle" %>
    </div>
    <div role="tabpanel" class="tab-pane" id="item3">
      <h3>The Events</h3>
      <%= link_to 'Create New Event', new_event_path %>
      <div class="container artist-table">
        <table>
          <thead>
            <tr>
              <th>Date</th>
              <th>Start</th>
              <th>End</th>
              <th>Gallery</th>
              <th>Artist</th>
              <th>Art</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @events.each do |event| %>
            <tr>
              <td><%= event.date.strftime("%m-%d-%Y") %></td>
              <td><%= event.start.strftime("%H:%M") %></td>
              <td><%= event.end.strftime("%H:%M") %></td>
              <td><%= event.gallery.name %></td>
              <td><%= event.artist.artist_name %></td>
              <td><%= event.artist.price %></td>
              <td><%= link_to 'Show', event %></td>
              <td><%= link_to 'Edit', edit_event_path(event) %></td>
              <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
  <br />
  <br />

<!-- End container Div -->
</div>
<script>
  $("tr[data-link]").click(function() {
    window.location = $(this).data('link');
  });
</script>
