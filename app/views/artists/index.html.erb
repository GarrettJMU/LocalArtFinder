<p id="notice"><%= notice %></p>
<% form_tag artists_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
<h1>Artists</h1>

<table>
  <thead>
    <tr>
      <th>Alias</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Street</th>
      <th>City</th>
      <th>State</th>
      <th>Zipcode</th>
      <th>Website</th>
      <th>Sales</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td><%= artist.alias %></td>
        <td><%= artist.first_name %></td>
        <td><%= artist.last_name %></td>
        <td><a href="mailto:<%= artist.email %>"><%= artist.email %></a></td>
        <td><%= artist.street %></td>
        <td><%= artist.city %></td>
        <td><%= artist.state %></td>
        <td><%= artist.zipcode %></td>
        <td><a href="<%= artist.website %>"><%= artist.website %></a></td>
        <td><%= artist.sales %></td>
        <td><a href="tel:<%= artist.phone %>"><%= artist.phone %></a></td>
        <td><%= link_to 'Show', artist %></td>
        <% if can? :update, artist %>
        <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
        <td><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>

  </tbody>
</table>

<br>

