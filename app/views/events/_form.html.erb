<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_select :date, id: :event_date %>
  </div>

  <div class="field">
    <%= form.label :start %>
    <%= form.time_select :start, id: :event_start %>
  </div>

  <div class="field">
    <%= form.label :end %>
    <%= form.time_select :end, id: :event_end %>
  </div>

  <div class="field">
    <%= form.label :gallery_id %>
    <%= form.text_field :gallery_id, id: :event_gallery_id %>
  </div>

  <div class="field">
    <%= form.label :artist_id %>
    <%= form.text_field :artist_id, id: :event_artist_id %>
  </div>

  <div class="field">
    <%= form.label :art_id %>
    <%= form.text_field :art_id, id: :event_art_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
