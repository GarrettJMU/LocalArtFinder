<p id="notice"><%= notice %></p>

<%= link_to image_tag(@art.image.url(:large)) %>

<p>
  <strong>Genre:</strong>
  <%= @art.genre %>
</p>

<p>
  <strong>Description:</strong>
  <%= @art.description %>
</p>

<p>
  <strong>Size</strong>
  <%= @art.length %>" x <%= @art.width %>"
</p>

<p>
  <strong>Medium:</strong>
  <%= @art.medium %>
</p>

<p>
  <strong>Artist:</strong>
  <%= @art.artist.artist_name %>
</p>

